<h1>Customers</h1>

<table class="table table-dark table-striped table-responsive small-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rented Movie</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.has_rental? ? 'Yes' : 'No' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
