<h1>Movies</h1>

<H3>REPOSITORIO https://github.com/frankokmc/alquilermovie.git </H3>

<table class="table table-dark table-striped table-responsive small-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Customer</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.customer ? movie.customer.name : 'N/A' %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
