<h1>Edit Movie</h1>

<%= form_with(model: @movie, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :customer_id %>
    <%= form.collection_select :customer_id, @customers, :id, :name, { prompt: 'Select a customer' }, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit 'Update Movie', class: 'btn btn-primary' %>
  </div>
<% end %>
